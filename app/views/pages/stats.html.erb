  <div class="site-wrap">

    <!-- Content Section -->
    <section>
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <h1>Stats</h1>
            <p>Look at the progression of your days, compare workdays and the weekend and many more fun things.</p>
