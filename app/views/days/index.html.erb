<p id="notice"><%= notice %></p>

<h1>Listing Days</h1>
<h2>Welcome user with email: <%= current_user.email %>!</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.date %></td>
        <td><%= day.description %></td>
        <td><%= day.user.email %> </td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Day', new_day_path %>
